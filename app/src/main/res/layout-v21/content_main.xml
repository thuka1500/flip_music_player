<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="undecv.flip_0002.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/UI_Music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_UI_Music" />

        <TextView
            android:text="NULL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_AudioFile"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:text="@string/UI_openFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_OpenAudio" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/UI_Lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_UI_Lyric" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LRCFile"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="NULL" />

        <Button
            android:text="@string/UI_openFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_OpenLRC" />

    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_Play" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/button_Play"
            style="@style/Widget.AppCompat.ImageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/button_Pause"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Stop"
            android:text="@string/UI_Stop" />

    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dividing_01"
        android:max="1"
        android:progress="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LRC_0"
            android:textAlignment="center" />

        <TextView
            android:text="Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LRC_1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center" />

        <TextView
            android:text="Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LRC_2"
            android:textAlignment="center" />

    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dividing_02"
        android:max="1"
        android:progress="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_UI_Statue"
        android:text="@string/UI_Statue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:id="@+id/Cons_01"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="monospace" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
